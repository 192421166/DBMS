USE CompanyDB;
SELECT EmpName
FROM Employee
WHERE DeptID IN (
    SELECT DeptID
    FROM Department
    WHERE DeptName = 'Computer Science'
);
SELECT EmpName
FROM Employee
WHERE DeptID IN (
    SELECT DeptID
    FROM Department
    WHERE DeptName = 'Electrical'
);
SELECT EmpName
FROM Employee e
WHERE EXISTS (
    SELECT 1
    FROM Department d
    WHERE e.DeptID = d.DeptID
      AND d.DeptName = 'Mechanical'
);
SELECT EmpName
FROM Employee e
WHERE EXISTS (
    SELECT 1
    FROM Department d
    WHERE e.DeptID = d.DeptID
      AND d.DeptName = 'Computer Science'
);
